<% layout('layouts/boilerplate') %>



    <div class="container d-flex justify-content-center align-items-center mt-2 mb-3 ">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-8 offset-xl-2">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1508163223045-1880bc36e222?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NjJ8fGxhbmRzY2FwZXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60"
                        class="card-img-top" alt="" />

                    <div class="card-body">
                        <h5 class="card-title">Register</h5>

                        <form action="/register" method="post" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-lable" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-lable" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-lable" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <button class="btn btn-success btn-block">Register</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>